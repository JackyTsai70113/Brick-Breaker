using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using TMPro;

public class ScoreText : MonoBehaviour
{
    public TextMeshProUGUI scoreText;

    public void SetScoreText(float totalTime, int totalScore, int totalBlocks)
    {
        scoreText.text =
            "Congratulation!" +
            "You got it!" +
            "Here is you score!" +
            "Total Time: " + totalTime.ToString() +
            "Total Score: " + totalScore.ToString() +
            "Total Block You broke: " + totalBlocks.ToString();
    }
}
